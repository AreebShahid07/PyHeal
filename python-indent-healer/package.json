{
  "name": "python-indent-healer",
  "displayName": "Python Indentation Healer",
  "publisher": "vyntri",
  "icon": "image.png",
  "description": "Automatically fixes broken Python indentation from copy-pastes.",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.90.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vyntri/python-indent-healer.git"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.healPython",
        "title": "Heal Python Indentation"
      },
      {
        "command": "extension.smartPaste",
        "title": "Smart Paste Python"
      }
    ],
    "keybindings": [
      {
        "command": "extension.healPython",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorTextFocus && resourceLangId == 'python'"
      },
      {
        "command": "extension.smartPaste",
        "key": "ctrl+v",
        "mac": "cmd+v",
        "when": "editorTextFocus && resourceLangId == 'python'"
      }
    ]
  },
  "keywords": [
    "python",
    "indentation",
    "fix",
    "paste",
    "format",
    "autopep8",
    "black"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}